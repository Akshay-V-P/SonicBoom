<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SonicBuy - Dashboard</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #0a0a0a;
            color: #ffffff;
            overflow-x: hidden;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            background-color: #1a1a1a;
            padding: 20px 0;
            border-right: 1px solid #333;
            position: fixed;
            height: 100%;
            overflow-y: auto;
            z-index: 1000;
        }

        .logo {
            padding: 0 20px 30px;
            font-size: 20px;
            font-weight: bold;
            color: #ffffff;
        }

        .user-profile {
            padding: 0 20px 30px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: #4a90e2;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            font-weight: bold;
        }

        .nav-menu {
            list-style: none;
        }

        .nav-item {
            margin-bottom: 5px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: #999;
            text-decoration: none;
            font-size: 14px;
            transition: all 0.2s;
        }

        .nav-link:hover, .nav-link.active {
            background-color: #333;
            color: #ffffff;
        }

        .nav-link.active {
            background-color: #4a90e2;
        }

        .nav-icon {
            width: 16px;
            height: 16px;
            margin-right: 12px;
            opacity: 0.7;
        }

        .bottom-nav {
            position: absolute;
            bottom: 20px;
            width: 100%;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 240px;
            padding: 20px 30px;
            position: relative;
        }

        .my-swal-border {
		border: 1px solid #404044 !important;
		/* Change color and thickness */
		border-radius: 15px !important;
	}

        /* Mobile Responsive */
        @media (max-width: 1024px) {
            .sidebar {
                padding: 80px 0 20px 0;
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 20px;
            }

            
        }

        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                gap: 15px;
                align-items: stretch;
            }

            
        }

        @media (max-width: 480px) {
            .main-content {
                padding: 15px;
            }

            
        }

        /* Menu toggle for mobile */
        .menu-toggle {
            display: none;
            background: none;
            border: none;
            color: #fff;
            font-size: 18px;
            cursor: pointer;
            padding: 10px;
        }

        @media (max-width: 1024px) {
            .menu-toggle {
                display: block;
                position: fixed;
                top: 20px;
                left: 20px;
                z-index: 1001;
            }

            .main-content {
                padding-top: 60px;
            }
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        @media (max-width: 1024px) {
            .overlay.active {
                display: block;
            }
        }

        
    </style>
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <div class="container">
        <button class="menu-toggle" id="menuToggle">â˜°</button>
        <div class="overlay" id="overlay"></div>
        
        <nav class="sidebar" id="sidebar">
            <div class="logo">SonicBoom</div>
            
            <div class="user-profile">
                <div class="user-avatar">A</div>
                <span>Admin</span>
            </div>

            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/admin/dashboard" id="dashboard" class="nav-link">
                        <span class="material-symbols-outlined nav-icon">
                        dashboard
                        </span>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/users" id="users" class="nav-link">
                        <span class="material-symbols-outlined nav-icon">
                        group
                        </span>
                        Users
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/products" id="products" class="nav-link">
                        <span class="material-symbols-outlined nav-icon">
                        package_2
                        </span>
                        Products
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/orders" id="orders" class="nav-link">
                        <span class="material-symbols-outlined nav-icon">
                        orders
                        </span>
                        Orders
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/banners" id="banner" class="nav-link">
                        <span class="material-symbols-outlined nav-icon">
                        panorama
                        </span>
                        Banner Management
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/coupons" id="coupon" class="nav-link"> 
                        <span class="material-symbols-outlined nav-icon">
                        confirmation_number
                        </span>
                        Coupon Management
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/sales" id="sales" class="nav-link">
                        <span class="material-symbols-outlined nav-icon">
                        finance_mode
                        </span>
                        Sales Report
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/category" id="category" class="nav-link">
                        <span class="material-symbols-outlined nav-icon">
                        category
                        </span>
                        Category
                    </a>
                </li>
            </ul>

            <div class="bottom-nav">
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/admin/settings" id="settings" class="nav-link">
                            <span class="material-symbols-outlined nav-icon">
                            settings
                            </span>
                            Settings
                        </a>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link" id="logout">
                            <span class="material-symbols-outlined nav-icon">
                            logout
                            </span>
                            Logout
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="main-content">
            {{{body}}}
        </main>
    </div>

    

    <script>
        const pageName = document.getElementById('pageName').value 
        const element = document.getElementById(pageName)
        element.classList.add('active')

        // Mobile menu toggle
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');

        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
        });

        // Close sidebar when clicking nav links on mobile
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                if (window.innerWidth <= 1024) {
                    sidebar.classList.remove('active');
                    overlay.classList.remove('active');
                }
            });
        });

        // Handle window resize
        window.addEventListener('resize', () => {
            if (window.innerWidth > 1024) {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
            }
        });

        // Initialize everything when page loads
        document.addEventListener('DOMContentLoaded', () => {
            initPagination();
        });

        document.getElementById("logout").addEventListener("click", ()=>{
            Swal.fire({
                title: "Are you sure?",
                text: "Do you want to Logout",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes",
                background: "#242428",
                customClass: {
				    popup: 'my-swal-border'
			    }
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/admin/logout'
                }
            });
        })
    </script>
</body>
</html>