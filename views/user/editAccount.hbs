                                    <input type="tel" id="phone" class="w-full bg-input-bg border border-border-color rounded-lg p-3 focus:ring-2 focus:ring-primary-blue focus:border-primary-blue outline-none" value="8732727345">
                                </div>
                                <div>
                                    <label for="email" class="block text-sm font-medium text-text-medium mb-2">Email</label>
                                    <input type="email" id="email" class="w-full bg-input-bg border border-border-color rounded-lg p-3 focus:ring-2 focus:ring-primary-blue focus:border-primary-blue outline-none" value="angeljohana@gmail.com">
