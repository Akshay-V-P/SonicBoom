    const resendBtn = document.getElementById('resendBtn');
    let countdown = 300; // 5 minutes in seconds

    function startTimer() {
        resendBtn.disabled = true;
        resendBtn.classList.add('cursor-not-allowed', 'opacity-50');
        updateButtonText();

        const timerInterval = setInterval(() => {
            countdown--;
            updateButtonText();

            if (countdown <= 0) {
                clearInterval(timerInterval);
                resendBtn.disabled = false;
                resendBtn.classList.remove('cursor-not-allowed', 'opacity-50');
                resendBtn.textContent = 'Resend';
            }
        }, 1000);
    }

    function updateButtonText() {
        const minutes = Math.floor(countdown / 60);
        const seconds = countdown % 60;
        resendBtn.textContent = `Resend (${minutes}:${seconds.toString().padStart(2, '0')})`;
    }

    // Start timer on page load
    window.onload = startTimer;

    // If user clicks Resend (after time is up)
    resendBtn.addEventListener('click', () => {
        // Here you can call your resend OTP API logic...
        // Then restart the timer:
        countdown = 300;
        startTimer();
    });
</script>
